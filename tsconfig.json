{
    "compilerOptions": {
        "lib": [
            "dom",
            "es5",
            "es2015"
        ],
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.d.ts"
    ],
    "exclude": ["node_modules"]
}